<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@drawable/chat_specific"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="趣聊"
        android:textColor="#a933"
        android:textSize="25sp"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_nicheng"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"

        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/line_6"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="5dp">
    <EditText
        android:id="@+id/edit_send_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:singleLine="false"
        android:textColor="#a42342"
        android:layout_weight="5"/>
    <Button
        android:id="@+id/send_text_b"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="1dp"
        android:textSize="34dp"
        android:layout_gravity="center"
        android:text="发送"
        android:background="#00000000"

        android:textColor="#134"/>

    </LinearLayout>




</LinearLayout>

